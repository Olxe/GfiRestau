<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="GfiRestau.controller.view1"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Gfi restaurant">
				<content>
					<SplitApp id="splitappid" masterButtonText="Menus">
						<masterPages>
							<Page id="masterpageid" title="Liste des menus" titleLevel="Auto" showHeader="true" showSubHeader="true" enableScrolling="true">
								<content>
									<List id="emplist" items="{/menu}" noDataText="Aucun menu" showNoData="true" mode="Delete" delete="onMasterDelete">
										<headerToolbar>
											<Toolbar>
												<content>
													<DatePicker change="onDatePickerChange"></DatePicker>
												</content>
											</Toolbar>
										</headerToolbar>
										<items>
											<StandardListItem type="Navigation" title="{date}" description="{nom}" press="onObjectItemPress"></StandardListItem>
										</items>
									</List>
									<Button text="Ajouter un menu" width="100%" press="onMasterAddPress"></Button>
								</content>
							</Page>
						</masterPages>
						<detailPages>
							<Page id="detailpageid" title="Liste des plats" titleLevel="Auto" showHeader="true" showSubHeader="true" enableScrolling="true">
								<content>
									<List id="projectlistid" items="{plats}" mode="Delete" delete="onDetailDelete">
										<items>
											<StandardListItem type="Navigation" title="{nom}" description="{description}"  press="onDetailObjectItemPress"></StandardListItem>
										</items>
									</List>
									<Button text="Ajouter un plat" width="100%" press="onDetailAddPress"></Button>
								</content>
							</Page>
						</detailPages>
					</SplitApp>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>